<Window x:Class="SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" Width="136" Margin="0,0,0,248"><Run Text="メッセージを入力してください"/></TextBlock>
        <Button x:Name="okButton" Content="OK" Height="42" VerticalAlignment="Top" Width="75" Margin="0,227,0,0" Click="okButton_Click"/>
        <Button x:Name="cancelButton" Content="キャンセル" Height="42" VerticalAlignment="Top" Width="75" Margin="0,227,0,0" Click="cancelButton_Click_1"/>
        <TextBox x:Name="MessageTextBox" Height="128" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="110"/>
    </DockPanel>
</Window>
